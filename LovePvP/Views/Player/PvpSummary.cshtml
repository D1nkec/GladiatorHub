@model PvpSummaryModel

<h2>@Model.CharacterName - PvP Summary</h2>

<p>Realm: @Model.RealmName</p>
<p>Honor Level: @Model.HonorLevel</p>
<p>Honorable Kills: @Model.HonorableKills</p>


<h3>Solo Shuffle Ratings by Specialization</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Specialization</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.SoloShuffleRating != null && Model.SoloShuffleRating.Any())
        {
            foreach (var rating in Model.SoloShuffleRating)
            {
                <tr>
                    <td>@rating.Key</td>
                    <td>@rating.Value</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">No specialization ratings available.</td>
            </tr>
        }
    </tbody>
</table>

<h3>PvP Map Statistics</h3>
<table class="table">
    <thead>
        <tr>
            <th>Map</th>
            <th>Played</th>
            <th>Won</th>
            <th>Lost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var map in Model.PvpMapStatistics)
        {
            <tr>
                <td>@map.MapName</td>
                <td>@map.Played</td>
                <td>@map.Won</td>
                <td>@map.Lost</td>
            </tr>
        }
    </tbody>
</table>
