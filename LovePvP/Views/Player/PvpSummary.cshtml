@model PvpSummaryModel

<div class="container my-5">
    <!-- Character Info Section -->
    <div class="text-center mb-4">
        <h2>@Model.CharacterName - PvP Summary</h2>
        <p><strong>Realm:</strong> @Model.RealmName | <strong>Honor Level:</strong> @Model.HonorLevel | <strong>Honorable Kills:</strong> @Model.HonorableKills</p>
    </div>

    <div class="row">
        <!-- Left Column for Ratings -->
        <div class="col-md-6">
            <!-- Solo Shuffle Ratings -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Solo Shuffle Ratings by Specialization</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Specialization</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.SoloShuffleRating != null && Model.SoloShuffleRating.Any())
                            {
                                foreach (var rating in Model.SoloShuffleRating)
                                {
                                    <tr>
                                        <td>@rating.Key</td>
                                        <td>@rating.Value</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" class="text-center">No specialization ratings available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Arena Rating -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">Arena Rating</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ArenaRating != null && Model.ArenaRating.Any())
                            {
                                foreach (var rating in Model.ArenaRating)
                                {
                                    <tr>
                                        <td>@rating.Key</td>
                                        <td>@rating.Value</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" class="text-center">No arena ratings available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Battleground Blitz Ratings -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">Battleground Blitz Ratings by Specialization</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Specialization</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.BgBlitzRating != null && Model.BgBlitzRating.Any())
                            {
                                foreach (var rating in Model.BgBlitzRating)
                                {
                                    <tr>
                                        <td>@rating.Key</td>
                                        <td>@rating.Value</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" class="text-center">No specialization ratings available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Right Column for PvP Map Stats -->
        <div class="col-md-6">
            <!-- PvP Map Statistics -->
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title mb-0">PvP Map Statistics</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Map</th>
                                <th>Played</th>
                                <th>Won</th>
                                <th>Lost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var map in Model.PvpMapStatistics)
                            {
                                <tr>
                                    <td>@map.MapName</td>
                                    <td>@map.Played</td>
                                    <td>@map.Won</td>
                                    <td>@map.Lost</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
